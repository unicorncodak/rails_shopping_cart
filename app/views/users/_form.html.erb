<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset id="account">
      <legend>Your Personal Details</legend>
      <div class="form-group required">
          <div class="row">
              <label class="col-sm-2 control-label" for="input-firstname">First Name</label>
              <div class="col-sm-10">
                <%= form.text_field :firstname, class: "form-control" %>
              </div>
          </div>
          
      </div>
      <div class="form-group required">
          <div class="row">
              <label class="col-sm-2 control-label" for="input-lastname">Last Name</label>
              <div class="col-sm-10">
                <%= form.text_field :lastname, class: "form-control" %>
              </div>
          </div>
          
      </div>
      <div class="form-group required">
          <div class="row">
              <label class="col-sm-2 control-label" for="input-email">Email</label>
              <div class="col-sm-10">
                <%= form.text_field :email, class: "form-control" %>
              </div>
          </div>
          
      </div>
      <div class="form-group required">
          <div class="row">
              <label class="col-sm-2 control-label" for="input-telephone">Telephone</label>
              <div class="col-sm-10">
                <%= form.number_field :telephone, class: "form-control" %>
              </div>
          </div>
          
      </div>
      
  </fieldset>
  <fieldset id="account">
      <legend>Your Password</legend>
      <div class="form-group required">
          <div class="row">
              <label class="col-sm-2 control-label" for="input-password">Password</label>
              <div class="col-sm-10">
                <%= form.password_field :password, class: "form-control" %>
              </div>
          </div>
          
      </div>
      <div class="form-group required">
          <div class="row">
              <label class="col-sm-2 control-label" for="input-password_confirmation">Confirm Password</label>
              <div class="col-sm-10">
                <%= form.password_field :password_confirmation, class: "form-control" %>
              </div>
          </div>
          
      </div>
  </fieldset>

  <div class="buttons">
        <div class="pull-right">
        I have read and agreed to the
        <a href="" class="agree">
          <b>Privacy Policy</b>
        </a>
        <input type="checkbox" name="agree" value="1" >
        &nbsp
        <%= form.submit 'Continue' %>
        </div>
  </div>

  
<% end %>
